// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator jsclient {
    provider = "prisma-client-js"
    output   = "../samurai/prisma-client-js"

}

model Guild {
    id                String     @id
    replyToSpotify    Boolean    @default(true)
    replyToAppleMusic Boolean    @default(true)
    replyToSoundcloud Boolean    @default(true)
    returnServices    Services[]
    replyStyle        ReplyStyle @default(MINIMAL)
}

model User {
    id       String  @id
    searches Int     @default(0)
    flags    Flags[]
}

enum Flags {
    FRIEND
    BANNED
    DONATOR
    CONTRIBUTOR
    OWNER
}

enum Services {
    SPOTIFY
    APPLEMUSIC
    SOUNDCLOUD
    TIDAL
    YOUTUBE
    YOUTUBE_MUSIC
}

enum ReplyStyle {
    MINIMAL
    DESCRIPTIVE
}
