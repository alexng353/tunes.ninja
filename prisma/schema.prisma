// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator jsclient {
    provider = "prisma-client-js"
    output   = "../samurai/prisma-client-js"

}

model Guild {
    id                String     @id
    replyToSpotify    Boolean    @default(true)
    replyToAppleMusic Boolean    @default(true)
    replyToSoundcloud Boolean    @default(true)
    returnServices    Services[]
    replyStyle        ReplyStyle @default(MINIMAL)
}

model User {
    id         String      @id
    searches   Int         @default(0)
    Spotify    Spotify?
    AppleMusic AppleMusic?
    LastFm     LastFm?
    flags      Flags[]
}

model Spotify {
    id            String    @id
    user          User      @relation(fields: [userId], references: [id])
    userId        String    @unique
    access_token  String?
    refresh_token String?
    expires_at    DateTime?
    scopes        String
}

model AppleMusic {
    id                    String    @id
    user                  User      @relation(fields: [userId], references: [id])
    userId                String    @unique
    personal_access_token String?
    expires_at            DateTime?
}

model LastFm {
    id       String  @id
    user     User    @relation(fields: [userId], references: [id])
    userId   String  @unique
    username String?
}

enum Flags {
    FRIEND
    BANNED
    DONATOR
    CONTRIBUTOR
    OWNER
}

enum Services {
    SPOTIFY
    APPLEMUSIC
    SOUNDCLOUD
    TIDAL
    YOUTUBE
    YOUTUBE_MUSIC
}

enum ReplyStyle {
    MINIMAL
    DESCRIPTIVE
}
